<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linear_layout_content_vertical"
    android:background="@mipmap/tt_fondo"
    tools:context="com.nad.tt.activity.user.LoginActivity">

    <LinearLayout style="@style/linear_layout_center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="250sp">
    </LinearLayout>
    <EditText
        android:id="@+id/txt_user"
        style="@style/lblHintRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-Mail"
        android:inputType="text" />

    <TextView
        android:id="@+id/lblErrorEmail"
        style="@style/lblError"/>

    <EditText
        android:id="@+id/txt_password"
        style="@style/lblHintRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/lblErroPassword"
        style="@style/lblError"/>


    <LinearLayout style="@style/linear_layout_center_horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/btnUserSave"
            style="@style/btnsStatus"
            android:onClick="actionLogin"
            android:text="@string/title_activity_login" />
    </LinearLayout>
</LinearLayout>
